{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:tailwindcss/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "curly": ["error", "all"],
    "tailwindcss/classnames-order": "error"
  },
  "env": {
    "browser": true,
    "node": true
  }
}
