{
  "name": "@rsc-parser/core",
  "version": "0.6.0",
  "packageManager": "yarn@4.3.1",
  "author": "Alvar Lagerl√∂f",
  "license": "MIT",
  "scripts": {
    "build": "vite build && yarn tailwindcss -o dist/style.css --minify",
    "dev": "concurrently  \"vite build --watch\" \"yarn tailwindcss -o dist/style.css --minify --watch\"",
    "test": "NODE_NO_WARNINGS=1 node --experimental-vm-modules ../../node_modules/jest/bin/jest.js --passWithNoTests",
    "test:dev": "yarn test --watch",
    "lint": "eslint",
    "format": "prettier . --check --config ../../.prettierrc",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "files": [
    "package.json",
    "dist"
  ],
  "type": "module",
  "style": "./dist/style.css",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./style.css": {
      "import": "./dist/style.css"
    },
    "./fetchPatcher": {
      "import": "./dist/fetchPatcher.js",
      "types": "./dist/fetchPatcher.d.ts"
    },
    "./events": {
      "import": "./dist/events.js",
      "types": "./dist/events.d.ts"
    }
  },
  "dependencies": {
    "@rsc-parser/react-client": "workspace:^",
    "d3": "7.9.0",
    "react-error-boundary": "4.0.13",
    "react-resizable-panels": "2.0.19"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.6.0",
    "@storybook/react": "8.1.11",
    "@testing-library/jest-dom": "6.4.6",
    "@testing-library/react": "16.0.0",
    "@types/d3": "7.4.3",
    "@types/d3-drag": "3.0.7",
    "@types/eslint__eslintrc": "2.1.1",
    "@types/eslint__js": "8.42.3",
    "@types/jest": "29.5.12",
    "@typescript-eslint/eslint-plugin": "7.14.1",
    "@typescript-eslint/parser": "7.14.1",
    "@vitejs/plugin-react": "4.3.1",
    "@vitejs/plugin-react-swc": "3.7.0",
    "autoprefixer": "10.4.19",
    "concurrently": "8.2.2",
    "eslint": "9.6.0",
    "eslint-plugin-tailwindcss": "3.17.4",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "postcss": "8.4.38",
    "prettier": "3.3.2",
    "tailwindcss": "3.4.4",
    "ts-jest": "29.1.5",
    "typescript": "5.4.5",
    "typescript-eslint": "7.13.1",
    "vite": "5.3.2",
    "vite-plugin-dts": "3.9.1"
  },
  "peerDependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}
